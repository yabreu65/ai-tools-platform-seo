# Configuración de Base de Datos
MONGODB_URI=mongodb+srv://usuario:password@cluster.mongodb.net/seo-tools

# Configuración de Autenticación
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
ENCRYPTION_KEY=tu_clave_de_encriptacion_de_32_caracteres

# URLs de la Aplicación
NEXT_PUBLIC_API_URL=https://api.tudominio.com
NEXT_PUBLIC_SITE_URL=https://tudominio.com
NEXT_PUBLIC_WEBHOOK_URL=https://webhook.tudominio.com

# Configuración de Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_MIXPANEL_TOKEN=tu_mixpanel_token
NEXT_PUBLIC_HOTJAR_ID=tu_hotjar_id

# Configuración de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_password_de_aplicacion
FROM_EMAIL=noreply@tudominio.com

# Configuración de AWS S3
AWS_S3_BUCKET=tu-bucket-s3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
CDN_URL=https://cdn.tudominio.com

# Configuración de Redis (opcional para cache)
REDIS_URL=redis://localhost:6379

# Configuración de Monitoreo
SENTRY_DSN=https://tu_sentry_dsn@sentry.io/proyecto
LOG_LEVEL=info

# Configuración de Desarrollo (solo para desarrollo local)
NODE_ENV=development
PORT=3000
API_PORT=3001

# Configuración de Puppeteer (para scraping)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox

# Configuración de Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de CORS
CORS_ORIGINS=https://tudominio.com,https://www.tudominio.com

# Configuración de Webhooks
WEBHOOK_SECRET=tu_webhook_secret

# Configuración de n8n
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_API_KEY=tu_n8n_api_key
N8N_WEBHOOK_SECRET=tu_n8n_webhook_secret

# URLs de Webhooks de n8n
N8N_COMPETITOR_WEBHOOK=http://localhost:5678/webhook/competitor-analysis
N8N_TECHNICAL_WEBHOOK=http://localhost:5678/webhook/seo-technical-analysis
N8N_CONTENT_WEBHOOK=http://localhost:5678/webhook/keyword-content-analysis
N8N_BACKLINK_WEBHOOK=http://localhost:5678/webhook/backlink-analysis

# Configuración de Timeouts para n8n
N8N_TIMEOUT_MS=300000
N8N_RETRY_ATTEMPTS=3
N8N_RETRY_DELAY_MS=5000

# Configuración de Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30